<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - SocialMediaWebsite.MVC</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/SocialMediaWebsite.MVC.styles.css" asp-append-version="true" />
</head>
<body>
	@if (User.Identity.IsAuthenticated)
	{
		<partial name="_UserNavbar"/>
	}
	else
	{
		<partial name="_GuestNavbar" />
	}
	<div class="container-fluid">
		<main role="main" class="mt-5 p-5 pb-0">
			@RenderBody()
		</main>
	</div>

	@* <footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2024 - SocialMediaWebsite.MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer> *@
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
