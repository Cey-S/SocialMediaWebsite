<header>
	<nav class="navbar fixed-top navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
		<div class="container-fluid">
			<a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Post" asp-action="Index">
				<img src="~/img/logo/hashtag_32.png" alt="Website Logo" /><span class="fs-4 fw-bold fst-italic ms-1">Topics</span>
			</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
					aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-link text-dark" asp-area="" asp-controller="Post" asp-action="Index">Feed</a>
					</li>
					<li class="nav-item">
						<a class="nav-link text-dark" asp-area="" asp-controller="Post" asp-action="Create">Create</a>
					</li>
					<li class="nav-item">
						@* <a class="nav-link text-dark" asp-area="" asp-controller="Message" asp-action="Index">Message</a> *@
					</li>
				</ul>
				<form class="navbar-form flex-grow-1 ms-3 me-3" role="search" asp-controller="Search" asp-action="Index">
					<div class="input-group">
						<input class="form-control rounded-pill" type="search" placeholder="Search #tag or @@username" name="query" id="query">
						<div class="input-group-btn">
							<button class="btn" type="submit">
								<i class="fa-solid fa-magnifying-glass"></i>
							</button>
						</div>
					</div>
				</form>
				<ul class="navbar-nav">
					@await Component.InvokeAsync("UserInfo")
				</ul>
			</div>
		</div>
	</nav>
</header>
